<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    android:padding="16dp">

    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kiran Remote Host"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp" />

    <TextView
        android:id="@+id/statusText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Status: Waiting for Connection..."
        android:textColor="@android:color/white"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/titleText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp" />

    <androidx.cardview.widget.CardView
        android:id="@+id/ipCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        app:cardBackgroundColor="#20FFFFFF"
        app:layout_constraintTop_toBottomOf="@id/statusText"
        android:layout_marginTop="48dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Manual Connection Fallback"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:alpha="0.7" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Enter Remote IP from Admin Phone:"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:layout_marginTop="12dp" />

            <EditText
                android:id="@+id/ipInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="e.g. 192.168.1.5"
                android:inputType="phone"
                android:textColor="@android:color/white"
                android:textColorHint="#80FFFFFF"
                android:layout_marginTop="8dp" />

            <Button
                android:id="@+id/btnManualConnect"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Connect Manually"
                android:layout_marginTop="16dp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/accessibilityLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/ipCard">

        <TextView
            android:id="@+id/accessibilityStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Accessibility: Checking..."
            android:textColor="#FF9800"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnOpenAccessibility"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Enable Remote Input"
            android:visibility="gone" />
    </LinearLayout>

    <TextView
        android:id="@+id/helpText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Make sure both phones are on the same Wi-Fi network."
        android:textColor="@android:color/white"
        android:textSize="12sp"
        android:alpha="0.5"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="32dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
